@{
    ViewData["Title"] = "Olvidé Mi Contraseña";
}

<h2>Olvidé Mi Contraseña</h2>

<p>Por favor, ingrese su dirección de correo electrónico para recibir un código de recuperación.</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["CodeSent"] != null)
{
    <form method="post" action="/Home/ConfirmarCodigo">
        <div class="form-group">
            <label for="recoveryCode">Código de Recuperación:</label>
            <input type="text" id="recoveryCode" name="recoveryCode" class="form-control" required />
        </div>
        <input type="hidden" name="email" value="@TempData["Email"]" />
        <button type="submit" class="btn btn-primary">Confirmar Código</button>
    </form>
}
else
{
    <form method="post" action="/Home/OlvideMiContraseña">
        <div class="form-group">
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Enviar Código</button>
    </form>
}
