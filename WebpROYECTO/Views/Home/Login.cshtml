@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="usuarioIngresado">Usuario:</label>
        <input type="text" id="usuarioIngresado" name="usuarioIngresado" class="form-control" />
    </div>
    <div class="form-group">
        <label for="contraseñaIngresada">Contraseña:</label>
        <input type="password" id="contraseñaIngresada" name="contraseñaIngresada" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("OlvideMiContraseña", "Home")">¿Olvidó su contraseña?</a>
</div>
