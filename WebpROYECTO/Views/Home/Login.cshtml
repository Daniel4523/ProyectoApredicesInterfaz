@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<div>
        <form method="post" class="form-container">
            <div class="form-group">
                <i class="bi bi-person-circle"></i>
                <label for="usuarioIngresado">Usuario:</label>
                <br /> <br />
                <input type="text" id="usuarioIngresado" name="usuarioIngresado" class="form-control" />
                 <br />
            </div>
            <div class="form-group">
                <i class="bi bi-shield-lock-fill"></i>
                <label for="contraseñaIngresada">Contraseña:</label>
                <br /> <br />
                <input type="password" id="contraseñaIngresada" name="contraseñaIngresada" class="form-control" />
            </div>
        <br />
        <div class="mt-3">
            <a href="@Url.Action("OlvideMiContraseña", "Home")">¿Olvidó su contraseña?</a>
        </div>
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}


